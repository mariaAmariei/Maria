    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Table</title>
</head>
<body>
    <h1>API Table</h1>
    <table border="1">
        <tr>
            <th>API Name</th>
            <th>API Description</th>
            <th>User Inputs</th>
        </tr>
        <tr>
            <td>GeoNames Postal Code Search</td>
            <td>Find places by postal code</td>
            <td>
                <label for="postalCode">Postal Code:</label>
                <input type="text" id="postalCode">
                <button onclick="searchByPostalCode()">Search</button>
            </td>
        </tr>
        <tr>
            <td>GeoNames Weather</td>
            <td>Retrieve weather information</td>
            <td>
                <label for="latitude">Latitude:</label>
                <input type="text" id="latitude">
                <label for="longitude">Longitude:</label>
                <input type="text" id="longitude">
                <button onclick="searchWeather()">Search</button>
            </td>
        </tr>
        <tr>
            <td>GeoNames Timezone</td>
            <td>Retrieve timezone information</td>
            <td>
                <label for="timezone">Timezone Name:</label>
                <input type="text" id="timezone">
                <button onclick="searchTimezone()">Search</button>
            </td>
        </tr>
    </table>

    <script>
        function searchByPostalCode() {
            var postalCode = document.getElementById("postalCode").value;
            // Perform API call to GeoNames Postal Code Search with postalCode parameter
            console.log("Searching for postal code: " + postalCode);
        }

        function searchWeather() {
            var latitude = document.getElementById("latitude").value;
            var longitude = document.getElementById("longitude").value;
            // Perform API call to GeoNames Weather with latitude and longitude parameters
            console.log("Searching weather for coordinates: " + latitude + ", " + longitude);
        }

        function searchTimezone() {
            var timezone = document.getElementById("timezone").value;
            // Perform API call to GeoNames Timezone with timezone parameter
            console.log("Searching timezone for: " + timezone);
        }
    </script>
</body>
